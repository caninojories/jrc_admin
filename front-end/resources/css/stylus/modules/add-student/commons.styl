
.studentAccount {
  height: 100%;
  background-color: #111111;
  .add-student-alert {
    margin-top: 200px;
  }
}

#page-login {
  box-shadow: 10px 10px 15px 10px #888888;
}

/*
 * Footer for add-student
 **/
footer.add-student {
  position: fixed;
  bottom: 0px;
  .main ul {
    display: flex;
    padding: 0px;
    list-style-type: none;
    li {
      width: 200px;
    }
    li:first-child {
      width: 250px;
      margin-top: 40px;
    }
    li:last-child{
      width: 250px;
      margin-top: 40px;
    }
  }
  .poweredBy {
    span {
      position: relative;
      top: 10px;
      z-index: 1;
      font-style: italic;
      font-weight: 800;
      font-size: 20px;
    }
    ul {
      display: flex;
      padding: 0px;
      list-style-type: none;
      li {
        width: 200px;
      }
      li {
        margin-top: 25px;
      }
      li:first-child {
        margin-top: 25px;
      }
      li:last-child {
        width: 150px;
        margin-top: 35px;
      }
    }
  }
  .developers {
    span {
      position: relative;
      top: 10px;
      z-index: 1;
      font-style: italic;
      font-weight: 800;
      font-size: 20px;
    }
    ul {
      padding: 0px;
      margin-top: 35px;
      list-style-type: none;
      li {
        font-size: 16px;
        font-weight: 800;
        padding: 5px;
        > a {
          color: #1d7c23;
          > i {
            color: #fff;
          }
        }
      }
    }
  }
}

